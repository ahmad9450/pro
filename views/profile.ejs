<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }

        .navbar a {
            color: white;
            padding: 14px 20px;
            text-decoration: none;
            text-align: center;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .profile-container {
            width: 80%;
            margin: auto;
            padding: 20px;
        }

        .post {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #fff;
        }

        .post h3 {
            margin: 0;
        }

        .post p {
            margin: 10px 0 0;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/feed">Home</a>
            <a href="/posts/create">Create Post</a>
            <a href="/auth/logout">Logout</a>
        </div>
    </nav>
    <div class="profile-container">
        <h1>Profile</h1>
        <p>Full Name: <%= user.fullName %></p>
        <p>Username: <%= user.username %></p>
        <h2>Your Posts</h2>
        <% if (posts.length > 0) { %>
            <% posts.forEach(post => { %>
                <div class="post">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No posts found.</p>
        <% } %>
    </div>
</body>
</html>